
(library
 ((name ecaml)
  (public_name ecaml)
  (libraries (
    core_kernel
    expect_test_helpers_kernel
    ))
  (preprocess (pps (ppx_jane -annotated-ignores ppxlib.runner)))
  ;; We need -std=c99 to enable (stack-allocated) variable-length arrays in ecaml_funcall.
  (c_flags (:standard -std=c99))
  (c_names (ecaml_stubs generated_stubs))))

(rule
 ((targets (generated_stubs.c))
  (deps (../gen/gen_c.exe))
  (action (bash "../gen/gen_c.exe > ${@}"))
  (fallback)))

(rule
 ((targets (generated_bindings.ml))
  (deps (../gen/gen_ml.exe))
  (action (bash "../gen/gen_ml.exe > ${@}"))
  (fallback)))


(rule
 ((targets (unnecessarily-global-symbols-for-review.txt))
  (deps (unnecessarily-global-symbols.sh (glob_files "*.ml")))
  (action (bash "./unnecessarily-global-symbols.sh > ${@}"))
  (fallback)))

(rule
 ((targets (unnecessarily-global-symbols-files-for-review.txt))
  (deps (unnecessarily-global-symbols-for-review.txt))
  (action (bash "sed -rn 's/^(.*) is the only call site .*$/\\1/p' ${^} | sort | uniq -c | sort -nrk 1 > ${@}"))
  (fallback)))

(alias
 ((name DEFAULT)
  (deps (unnecessarily-global-symbols-files-for-review.txt
         unnecessarily-global-symbols-for-review.txt))))

(jbuild_version 1)
